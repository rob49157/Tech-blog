<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{! stylesheet for bootstrap }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Tech-blog</title>

  </head>

  <body id="mybody"> <a href="/notes"></a>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid"> 
        <a class="navbar-brand" href="/" style= "font-family: 'Bakbak One', cursive;">Tech-blog</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavDarkDropdown"
          aria-controls="navbarNavDarkDropdown"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDarkDropdownMenuLink"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                style= "font-family: 'Bakbak One', cursive;"
              >
                Options
              </a>
              <ul
                class="dropdown-menu dropdown-menu-dark"
                aria-labelledby="navbarDarkDropdownMenuLink"
              >
               
                <li><a class="dropdown-item" href="/dashboard" style= "font-family: 'Bakbak One', cursive;">dashboard</a></li>
                <li><a class="dropdown-item" href="/create" style= "font-family: 'Bakbak One', cursive;">Create</a></li>

                
                <li><a
                    class="dropdown-item"
                    id="logout"
                    href="/js/logout.js"
                    style= "font-family: 'Bakbak One', cursive;"
                  >Logout</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <header>
     
    </header>


    <nav>

      <!-- If the user is logged in, show a logout button -->
      {{#if loggedIn}}
        {{! <button id="logout" class="btn-no-style">Logout</button> }}
      {{else}}
        <!-- Otherwise, show a link to login -->
        <a href="/login">Login</a>
      {{/if}}
    </nav>
    <main>

      <div class="gallery">
        {{{body}}}
      </div>
    </main>
    <!-- If the user is logged in, load the JS script for when they logout -->
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

  {{! //javascript bootstrap }}
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
  <script src="./js/display.js"></script>

</html>